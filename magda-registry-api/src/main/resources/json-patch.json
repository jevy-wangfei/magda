{
    "title":
        "JSON schema for JSONPatch files.  This is http://json.schemastore.org/json-patch modified to work with Swagger, which doesn't support `oneOf`.",
    "$schema": "http://json-schema.org/draft-04/schema#",

    "type": "array",

    "items": {
        "$ref": "#/definitions/operation"
    },

    "definitions": {
        "operation": {
            "type": "object",
            "required": ["op", "path"],
            "discriminator": "op",
            "allOf": [{ "$ref": "#/definitions/path" }],
            "properties": {
                "op": {
                    "description": "The operation to perform.",
                    "type": "string",
                    "enum": ["add", "replace", "test", "move", "copy", "remove"]
                }
            }
        },
        "path": {
            "properties": {
                "path": {
                    "description": "A JSON Pointer path.",
                    "type": "string"
                }
            }
        },
        "add": {
            "allOf": [
                {
                    "$ref": "#/definitions/operation"
                }
            ],
            "type": "object",
            "required": ["value"],
            "properties": {
                "value": {
                    "description": "The value to add."
                }
            }
        },
        "replace": {
            "allOf": [
                {
                    "$ref": "#/definitions/operation"
                }
            ],
            "type": "object",
            "required": ["value"],
            "properties": {
                "value": {
                    "description": "The new value."
                }
            }
        },
        "test": {
            "allOf": [
                {
                    "$ref": "#/definitions/operation"
                }
            ],
            "type": "object",
            "required": ["value"],
            "properties": {
                "value": {
                    "description": "The value to test for."
                }
            }
        },
        "remove": {
            "allOf": [
                {
                    "$ref": "#/definitions/operation"
                }
            ],
            "type": "object"
        },
        "move": {
            "allOf": [
                {
                    "$ref": "#/definitions/operation"
                }
            ],
            "type": "object",
            "required": ["from"],
            "properties": {
                "from": {
                    "description":
                        "A JSON Pointer path pointing to the location to move from.",
                    "type": "string"
                }
            }
        },
        "copy": {
            "allOf": [
                {
                    "$ref": "#/definitions/operation"
                }
            ],
            "type": "object",
            "required": ["from"],
            "properties": {
                "from": {
                    "description":
                        "A JSON Pointer path pointing to the location to copy from.",
                    "type": "string"
                }
            }
        }
    }
}
